void printMyASCII(unsigned long letter, int row) {
  //  if (!((letter < 'А') || (letter > 'Я'))) {
  uint8_t curRow = alphabetUP[letter - 'А'][row];
  uint8_t checkBit = 0b10000000;

  while (checkBit) {
    char printIt = ' ';
    if (curRow & checkBit)
      printIt = '#';

    Serial.print(printIt);
    checkBit = checkBit >> 1;
  }
